/* Style for navigation titles */
.md-nav__title {
    color: #2c3e50; /* Deep teal for light mode */
    font-weight: bold;
    text-transform: uppercase;
}

/* Style for dark mode navigation */
@media (prefers-color-scheme: dark) {
    .md-nav__title {
        color: #00b894; /* Bright teal for dark mode */
    }
}

/* Custom banner style */
.md-banner {
    background-color: #2c3e50; /* Dark teal */
    color: white;
    padding: 1rem;
    border-radius: 4px;
}

/* Headings style */
.md-typeset h1, .md-typeset h2 {
    font-family: 'Roboto', sans-serif;
    color: #2c3e50;
}

/* Light theme header link hover */
.md-header__button:hover {
    color: #00b894;
}

